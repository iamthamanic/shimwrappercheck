{
  "root": true,
  "ignorePatterns": [
    "node_modules/**",
    ".git/**",
    ".next/**",
    "dist/**",
    "build/**",
    ".shim/**",
    ".shimwrapper/**",
    ".stryker-tmp/**",
    ".codex-home/**"
  ],
  "plugins": ["complexity"],
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx"],
      "rules": {
        "complexity": ["error", { "max": 10 }]
      }
    }
  ]
}
