{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "command",
  "commandRunner": {
    "command": "npm run test:run"
  },
  "mutate": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "ignorePatterns": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "*.test.*",
    "*.spec.*"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 80
  }
}
